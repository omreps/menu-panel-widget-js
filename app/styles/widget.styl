rupture.mobile-cutoff = 900px

import('sprites/*')
import('helpers/svg-size')
@import 'helpers/variables'
@import 'helpers/mixins'
@import 'helpers/optimize'

.mywdgt_a
    text-decoration none
.mywdgt_dropdown_a
.mywdgt_dropdown_a:hover
.mywdgt_dropdown_a:visited
    color #333
    text-decoration none
.mywdgt_flex    
    display flex
    justify-content center
.mywdgt_navbar
    width 100%
    top 0px
.mywdgt_center_block
    height 100%
    margin 0 auto
    width 50%
.mywdgt_bar_left
    width 50%
    margin-top 5px
    min-height 30px
    line-height 25px
.mywdgt_bar_right
    width 50%
    margin-top 5px
    min-height 30px
    line-height 25px
.border_left
    border-left 1px solid #ccc
    +mobile()
        border-left 0px solid #ccc
.border_right
    border-right 1px solid #ccc
    +mobile()
        border-right 0px solid #ccc
.mywdgt_left
    float left
.mywdgt_right
    float right
.mywdgt_bar_dropdown 
    overflow hidden
.mywdgt_bar_dropbtn
    border none
    padding-left 3px
    margin-left 3px
    padding-right 3px
    margin-right 3px
    background-color #ccc
.mywdgt_bar_dropdown
    font-size 16px
    outline none
    color white
    background-color inherit
    font-family inherit
.mywdgt_bar_dropdown_content 
    display none
    position absolute
    background-color #f9f9f9
    min-width 160px
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2)
    margin-left 3px
    margin-top -4px
    z-index 1
.mywdgt_bar_dropdown_content .mywdgt_dropdown_a
    float none
    color black
    padding 12px 16px
    text-decoration none
    display block
    text-align left
.mywdgt_bar_dropdown-content .mywdgt_dropdown_a:hover 
    background-color #ddd
.mywdgt_bar_dropdown:hover .mywdgt_bar_dropdown_content 
    display block